{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["envelope", "data", "metadata"],
  "properties": {
    "envelope": {
      "type": "string",
      "const": "outgoing"
    },
    "data": {
      "type": "string",
      "description": "Raw ciphertext ready for wire transmission"
    },
    "metadata": {
      "type": "object",
      "required": ["keyId"],
      "properties": {
        "keyId": {
          "type": "string",
          "description": "Key hash/hint for recipient to identify decryption key"
        },
        "algorithm": {
          "type": "string"
        },
        "nonce": {
          "type": "string"
        },
        "timestamp": {
          "type": "string"
        }
      }
    }
  }
}