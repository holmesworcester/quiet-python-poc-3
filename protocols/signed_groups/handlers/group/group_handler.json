{
  "type": "group",
  "projector": {
    "description": "Projects group events",
    "func": "projector.project",
    "tests": [
      {
        "description": "Group created by valid user",
        "given": {
          "db": {
            "tables": {
              "users": [
                {"id": "user_123", "pubkey": "creator_pub", "network_id": "net_123"}
              ]
            }
          },
          "envelope": {
            "data": {
              "type": "group",
              "id": "group_123",
              "name": "Developers",
              "user_id": "user_123",
              "signature": "dummy_sig"
            },
            "metadata": {}
          }
        },
        "then": {
          "tables": {
            "groups": [
              { "id": "group_123", "name": "Developers", "created_by": "user_123" }
            ]
          }
        }
      },
      {
        "description": "Group blocked when creator doesn't exist",
        "given": {
          "db": {
            "tables": {}
          },
          "envelope": {
            "data": {
              "type": "group",
              "id": "group_456",
              "name": "Invalid Group",
              "user_id": "unknown_user",
              "signature": "dummy_sig"
            },
            "metadata": {}
          }
        },
        "then": {
          "tables": { "groups": [] }
        }
      },
      {
        "description": "Group blocked when user_id doesn't match signer",
        "given": {
          "db": {
            "tables": {
              "users": [
                {"id": "user_123", "pubkey": "creator_pub", "network_id": "net_123"},
                {"id": "user_456", "pubkey": "other_pub", "network_id": "net_123"}
              ]
            }
          },
          "envelope": {
            "data": {
              "type": "group",
              "id": "group_789",
              "name": "Mismatched Group",
              "user_id": "user_123",
              "signature": "dummy_sig_signed_by_user_456"
            },
            "metadata": {}
          }
        },
        "then": {
          "tables": { "groups": [] }
        }
      },
      {
        "description": "Idempotency - duplicate group doesn't create duplicate state",
        "given": {
          "db": {
            "tables": {
              "users": [
                {"id": "user_123", "pubkey": "creator_pub", "network_id": "net_123"}
              ],
              "groups": [
                {
                  "id": "group_123",
                  "name": "Developers",
                  "created_by": "user_123"
                }
              ]
            },
            "tables": { "event_store": [ { "event_type": "group", "data": { "type": "group", "id": "group_123", "name": "Developers", "user_id": "user_123", "signature": "dummy_sig" }, "metadata": {} } ] }
          },
          "envelope": {
            "data": {
              "type": "group",
              "id": "group_123",
              "name": "Developers",
              "user_id": "user_123",
              "signature": "dummy_sig"
            },
            "metadata": {}
          }
        },
        "then": {
          "tables": {
            "groups": [ { "id": "group_123", "name": "Developers", "created_by": "user_123" } ]
          }
        }
      },
      {
        "description": "Second group doesn't change first_group_id",
        "given": {
          "db": {
            "tables": {
              "users": [
                {"id": "user_123", "pubkey": "creator_pub", "network_id": "net_123"}
              ],
              "groups": [
                {
                  "id": "group_first",
                  "name": "First Group",
                  "created_by": "user_123"
                }
              ],
              "first_group_id": "group_first"
            }
          },
          "envelope": {
            "data": {
              "type": "group",
              "id": "group_second",
              "name": "Second Group",
              "user_id": "user_123",
              "signature": "dummy_sig_signed_by_user_123"
            },
            "metadata": {}
          }
        },
        "then": {
          "tables": {
            "groups": [
              {"id": "group_first", "name": "First Group", "created_by": "user_123"},
              {"id": "group_second", "name": "Second Group", "created_by": "user_123"}
            ]
          }
        }
      },
      {
        "description": "Auto-unblocks add events waiting for this group",
        "given": {
          "db": {
            "tables": { "event_store": [ { "event_type": "add", "data": { "type": "add", "id": "add_123", "group_id": "group_456", "user_id": "user_789", "added_by": "user_123", "signature": "dummy_sig" }, "metadata": {} } ] },
            "tables": {
              "users": [
                {"id": "user_123", "pubkey": "creator_pub", "network_id": "net_123"},
                {"id": "user_789", "pubkey": "member_pub", "network_id": "net_123"}
              ],
              "blocked_by_id": {
                "group_456": [
                  {"event_id": "add_123", "reason": "Group group_456 not found"}
                ]
              }
            }
          },
          "envelope": {
            "data": {
              "type": "group",
              "id": "group_456",
              "name": "New Group",
              "user_id": "user_123",
              "signature": "dummy_sig"
            },
            "metadata": {}
          }
        },
        "ticks": 2,
        "then": {
          "tables": { "groups": [ {"id": "group_456"} ], "adds": [ {"id": "add_123"} ] }
        }
      },
      {
        "description": "Auto-unblocks channel events waiting for this group",
        "given": {
          "db": {
            "tables": { "event_store": [ { "event_type": "channel", "data": { "type": "channel", "id": "channel_789", "network_id": "net_123", "name": "Dev Chat", "group_id": "group_new", "created_by": "user_123", "signature": "dummy_sig" }, "metadata": {} } ] },
            "tables": {
              "users": [
                {"id": "user_123", "pubkey": "creator_pub", "network_id": "net_123"}
              ],
              "blocked_by_id": {
                "group_new": [
                  {"event_id": "channel_789", "reason": "Group group_new not found"}
                ]
              }
            }
          },
          "envelope": {
            "data": {
              "type": "group",
              "id": "group_new",
              "name": "New Group",
              "user_id": "user_123",
              "signature": "dummy_sig"
            },
            "metadata": {}
          }
        },
        "ticks": 2,
        "then": {
          "tables": { "groups": [ {"id": "group_new"} ], "channels": [ {"id": "channel_789"} ] }
        }
      }
    ]
  }
}
