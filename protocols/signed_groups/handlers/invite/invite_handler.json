{
  "type": "invite",
  "projector": {
    "description": "Projects invite events",
    "func": "projector.project",
    "tests": [
      {
        "given": {
          "db": {
            "state": {
              "users": [
                {"id": "user_123", "pubkey": "inviter_pub", "network_id": "net_123"}
              ]
            }
          },
          "envelope": {
            "data": {
              "type": "invite",
              "id": "invite_id_123",
              "invite_pubkey": "invite_pub_123",
              "network_id": "net_123",
              "created_by": "user_123",
              "signature": "dummy_sig"
            },
            "metadata": {}
          }
        },
        "then": {
          "db": {
            "state": {
              "users": [
                {"id": "user_123", "pubkey": "inviter_pub", "network_id": "net_123"}
              ],
              "invites": [
