{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["envelope", "data", "metadata"],
  "properties": {
    "envelope": {
      "type": "string",
      "const": "verifiedPlaintext"
    },
    "data": {
      "type": "object"
    },
    "metadata": {
      "type": "object",
      "required": ["verified"],
      "properties": {
        "verified": {
          "type": "boolean",
          "const": true
        },
        "sender": {
          "type": "string"
        }
      }
    }
  }
}