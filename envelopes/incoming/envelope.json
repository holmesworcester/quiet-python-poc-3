{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["envelope", "data", "metadata"],
  "properties": {
    "envelope": {
      "type": "string",
      "const": "incoming"
    },
    "data": {
      "oneOf": [
        {"type": "string", "description": "Raw ciphertext from wire"},
        {"type": "object", "description": "Unencrypted/signed data"}
      ]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "keyId": {
          "type": "string",
          "description": "Key hash for identifying decryption key"
        },
        "encrypted": {
          "type": "boolean"
        },
        "algorithm": {
          "type": "string"
        },
        "nonce": {
          "type": "string"
        },
        "network_id": {
          "type": "string"
        },
        "origin": {
          "type": "string"
        }
      }
    }
  }
}